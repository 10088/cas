<?xml version="1.0" encoding="UTF-8" ?>
<Configuration monitorInterval="120">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss}{GMT-7} %p [%c] - &lt;%m&gt;}%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <AsyncLogger name="org.apereo.cas" level="trace" additivity="false" />
        <AsyncLogger name="org.apereo.cas.util" level="warn" additivity="false" />
        <AsyncLogger name="org.springframework.web" level="trace" additivity="false" />
        <AsyncLogger name="org.pac4j" level="debug" additivity="false" />

        <AsyncLogger name="org.apereo.cas.web.support.DefaultArgumentExtractor" level="error" additivity="false" />
        <AsyncLogger name="org.apereo.cas.authentication.principal.WebApplicationServiceFactory" level="error" additivity="false" />
        <AsyncLogger name="org.apereo.cas.ticket.registry.DefaultTicketRegistryCleaner" level="error" additivity="false" />
        <AsyncRoot level="warn">
            <AppenderRef ref="console"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
